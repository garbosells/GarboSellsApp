<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="60dp"
    android:layout_marginTop="?attr/actionBarSize"
    tools:context="edu.asu.garbosells.Core.Activity.AddItem.InputWizardActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/input_description_layout"
            layout="@layout/input_description"
            android:visibility="visible"
            />
        <include
            android:id="@+id/input_size_layout"
            layout="@layout/input_size"
            android:visibility="gone"/>
        <include
            android:id="@+id/input_measurement_layout"
            layout="@layout/input_measurement_info"
            android:visibility="gone"/>
        <include
            android:id="@+id/input_color_layout"
            layout="@layout/input_color"
            android:visibility="visible"
            />
        <include
            android:id="@+id/input_decade_layout"
            layout="@layout/input_decade"
            android:visibility="visible"
            />
        <include
            android:id="@+id/input_material_layout"
            layout="@layout/input_material"
            android:visibility="visible"
            />

            <FrameLayout
                android:id="@+id/fragment_attribute_list_placeholder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:id="@+id/attribute_list_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                >
                <include
                    android:id="@+id/input_submit_layout"
                    layout="@layout/input_wizard_submit"
                    android:visibility="visible"/>
            </LinearLayout>
    </LinearLayout>
</ScrollView>