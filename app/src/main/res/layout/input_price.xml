<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/input_price"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:minHeight="60dp">

    <android.support.v7.widget.CardView
        android:id="@+id/input_price_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardUseCompatPadding="true"
        android:elevation="5dp"
        >

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.constraint.Guideline
                android:id="@+id/input_price_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.15085158"/>

            <TextView
                android:id="@+id/textview_price_step_number"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/progress_circle"
                android:gravity="center"
                android:text="9"
                android:textColor="@color/color_white"
                app:layout_constraintEnd_toStartOf="@+id/input_price_guideline"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/textview_item_price_input_prompt"
                style="@style/CustomFragmentLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="Price"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/input_price_guideline"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/textview_item_price_input_prompt"/>

            <TextView
                android:id="@+id/input_price_hint"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@+id/input_price_guideline"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textview_item_price_input_prompt"
                app:layout_constraintBottom_toTopOf="@+id/price_input_container"
                android:text="Price is in US Dollars"
                android:textSize="17dp"
                android:textStyle="italic"
                android:layout_marginStart="8dp"
                />

            <View
                android:id="@+id/bar"
                android:layout_width="2dp"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@color/colorAccent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/textview_price_step_number"
                app:layout_constraintStart_toStartOf="@+id/textview_price_step_number"
                app:layout_constraintTop_toBottomOf="@id/textview_price_step_number" />

            <LinearLayout
                android:id="@+id/price_input_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/input_price_hint"
                app:layout_constraintStart_toEndOf="@+id/input_price_guideline"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="15dp"
                android:padding="3dp"
                >
                <EditText
                    android:id="@+id/edittext_price"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:minHeight="65dp"
                    android:inputType="numberDecimal"
                    android:maxLength="5"
                    android:textSize="25dp"
                    android:scrollHorizontally="false"
                    android:background="@color/grey_100"
                    android:layout_marginStart="8dp"
                    />
            </LinearLayout>
        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>