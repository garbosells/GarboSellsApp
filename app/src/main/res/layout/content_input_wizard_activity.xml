<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="60dp"
    android:paddingTop="?attr/actionBarSize"
    tools:context="edu.asu.garbosells.Core.Activity.AddItem.InputWizardActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/input_description_layout"
            layout="@layout/input_description"
            android:visibility="visible"
            />
        <include
            android:id="@+id/input_size_layout"
            layout="@layout/input_size"
            android:visibility="gone"/>
        <include
            android:id="@+id/input_measurements_layout"
            layout="@layout/fragment_measurement_info"
            android:visibility="gone"
            />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>