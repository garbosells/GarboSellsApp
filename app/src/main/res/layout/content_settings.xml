<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:layout_marginLeft="@dimen/activity_horizontal_margin"
  android:layout_marginRight="@dimen/activity_horizontal_margin"
  android:layout_marginTop="@dimen/activity_vertical_margin"
  tools:context="edu.asu.garbosells.UserManagement.SettingsActivity">

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="Settings"
    android:textStyle="bold"
    android:id="@+id/textViewUserDetailsMessage"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true" />

  <Space
    android:layout_width="match_parent"
    android:layout_height="@dimen/activity_inter_group_separation"
    android:layout_below="@+id/textViewUserDetailsMessage"
    android:layout_alignParentStart="true"
    android:id="@+id/space3" />

  <ListView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/listViewUserAttributes"
    android:layout_below="@+id/space3"
    android:backgroundTint="@color/grey_100"
    android:background="@drawable/text_border_selected"/>

  <Space
    android:layout_width="match_parent"
    android:layout_height="@dimen/activity_intra_group_separation"
    android:layout_below="@+id/listViewUserAttributes"
    android:id="@+id/space4" />

  <Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Verify Email"
    android:textAllCaps="false"
    android:textColor="@color/white"
    android:textSize="@dimen/activity_button_text_size"
    android:id="@+id/buttonVerifyEmailButtonInSettings"
    android:layout_centerHorizontal="true"
    android:layout_below="@+id/space4"
    android:background="@drawable/button_selector" />

  <Space
    android:layout_width="match_parent"
    android:layout_height="@dimen/activity_intra_group_separation"
    android:layout_below="@+id/buttonVerifyEmailButtonInSettings"
    android:id="@+id/space5" />

  <Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Change Password"
    android:textAllCaps="false"
    android:textColor="@color/white"
    android:textSize="@dimen/activity_button_text_size"
    android:id="@+id/buttonChangePasswordButtonInSettings"
    android:layout_centerHorizontal="true"
    android:layout_below="@+id/space5"
    android:background="@drawable/button_selector" />

  <Space
    android:layout_width="match_parent"
    android:layout_height="@dimen/activity_intra_group_separation"
    android:layout_below="@+id/buttonChangePasswordButtonInSettings"
    android:id="@+id/space6" />

  <Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Review Devices"
    android:textAllCaps="false"
    android:textColor="@color/white"
    android:textSize="@dimen/activity_button_text_size"
    android:id="@+id/buttonReviewDevicesButtonInSettings"
    android:layout_centerHorizontal="true"
    android:layout_below="@+id/space6"
    android:background="@drawable/button_selector" />

  <Space
    android:layout_width="match_parent"
    android:layout_height="@dimen/activity_intra_group_separation"
    android:layout_below="@+id/buttonReviewDevicesButtonInSettings"
    android:layout_alignParentBottom="true"
    android:id="@+id/space7" />

</RelativeLayout>
